<!DOCTYPE html>
<html>
<head>
  <title>Skaterbase</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='background'>
	<div class='content' >
		<frameset cols="80%">
				<div class="container-fluid">
						<ul class="nav nav-tabs">
								<li><%= link_to "Home", controller: 'welcome' %></li>
								<li><%= link_to "All Skaters", skaters_path %></li>
								<li><%= link_to "All Videos", skate_videos_path %></li>
								<li><%= link_to "Add New Skater", new_skater_path %></li>
								<li><%= link_to "Add New Video", new_skate_video_path %></li>

							<div class='btn-group pull-right right-nav'>
								<button type="button" class="btn btn-sm dropdown-toggle" data-toggle="dropdown">
									<span class="caret"></span>
									<span class="sr-only">Navigation</span>
								</button>
								<ul class="dropdown-menu" role="menu">
									<li><%= link_to "Home", controller: 'welcome' %></li>
									<li><%= link_to "All Skaters", skaters_path %></li>
									<li><%= link_to "All Videos", skate_videos_path %></li>
									<li><%= link_to "Add New Skater", new_skater_path %></li>
									<li><%= link_to "Add New Video", new_skate_video_path %></li>
								</ul>
							</div>		
						</ul>		
				</div>
		</frameset>
		<%= yield %>
	</div>
</body>
</html>